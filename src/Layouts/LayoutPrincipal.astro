---


export interface Props {
  title: string;
  description?: string;
  image?: string;        // para Open Graph
  canonical?: string;    // URL canónica (opcional)
  // podrías añadir más campos como author, pubDate, og:type, etc.
}

const {
  title,
  description = "",
  image = "",
  canonical = ""
} = Astro.props;
const canonicalUrl = canonical || Astro.site + Astro.url.pathname;

---


<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <!-- CSS global servido desde public/assets -->
    <link rel="stylesheet" href="/assets/css/style.css" />

    <!-- Open Graph / Social meta -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    {image && <meta property="og:image" content={image} />}
    <meta property="og:url" content={canonicalUrl} />
    

    <!-- Twitter Card (opcional) -->
    <meta name="twitter:card" content={image ? "summary_large_image" : "summary"} />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    {image && <meta name="twitter:image" content={image} />}
  </head>
  <body>
    <div id="preloader-active">
      <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-inner position-relative">
          <div class="page-loading">
            <div class="page-loading-inner">
              <div></div>
              <div></div>
              <div></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <slot />
    <script is:inline src="/assets/js/vendors/modernizr-3.6.0.min.js"></script>
    <script is:inline src="/assets/js/vendors/jquery-3.7.1.min.js"></script>
    <script is:inline src="/assets/js/vendors/jquery-migrate-3.3.0.min.js"></script>
    <script is:inline src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script is:inline src="/assets/js/vendors/waypoints.js"></script>
    <script is:inline src="/assets/js/vendors/wow.js"></script>
    <script is:inline src="/assets/js/vendors/magnific-popup.js"></script>
    <script is:inline src="/assets/js/vendors/perfect-scrollbar.min.js"></script>
    <script is:inline src="/assets/js/vendors/select2.min.js"></script>
    <script is:inline src="/assets/js/vendors/isotope.js"></script>
