---
const indicadores = [
  { label: "Total Activos", value: "$ 9,907,635.31", tone: "activos" },
  { label: "Total Pasivos", value: "$ 9,008,230.95", tone: "pasivos" },
  { label: "Patrimonio", value: "$ 899,404.36", tone: "patrimonio" },
];

const resumen = [
  { label: "Provisiones", value: "110 %" },
  { label: "Mora", value: "5.3 %" },
];
---

<section class="section indicators-section mt-100">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center wow animate__animated animate__zoomIn" data-wow-delay=".0s">
        <p class="eyebrow mb-10">Indicadores</p>
        <h2 class="color-brand-1 mb-40">Cifras que importan</h2>
      </div>
    </div>

    <div class="indicator-bubbles wow animate__animated animate__fadeIn" data-wow-delay=".0s">
      {indicadores.map((item) => (
        <div class={`indicator-bubble ${item.tone}`}>
          <p class="bubble-label">{item.label}</p>
          <p class="bubble-value">{item.value}</p>
        </div>
      ))}
    </div>

    <div class="indicator-badges">
      {resumen.map((item) => (
        <div class="indicator-badge">
          <span class="badge-label">{item.label}:</span>
          <strong class="badge-value">{item.value}</strong>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .indicators-section {
    position: relative;
    overflow: hidden;
    background: radial-gradient(circle at 30% 20%, #ffffff 0%, #f5f5f5 45%, #ededed 100%);
    padding: clamp(32px, 4vw, 48px);
  }

  .indicators-section::before,
  .indicators-section::after {
    content: "";
    position: absolute;
    border-radius: 50%;
    filter: blur(30px);
    opacity: 0.35;
    z-index: 0;
  }

  .indicators-section::before {
    width: 260px;
    height: 260px;
    background: #f3d45d;
    top: 10%;
    left: -120px;
  }

  .indicators-section::after {
    width: 320px;
    height: 320px;
    background: #a31629;
    bottom: -140px;
    right: -120px;
  }

  .eyebrow {
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #a31629;
  }

  .indicator-bubbles {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: clamp(16px, 3vw, 24px);
    justify-items: center;
    position: relative;
    z-index: 1;
  }

  .indicator-bubble {
    --size: clamp(210px, 26vw, 280px);
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #fff;
    box-shadow: 0 24px 48px rgba(0, 0, 0, 0.18);
    position: relative;
    overflow: hidden;
    padding: 18px;
  }

  .indicator-bubble::after {
    content: "";
    position: absolute;
    inset: 14px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.2);
    opacity: 0.7;
  }

  .bubble-label {
    font-size: clamp(1.05rem, 1.6vw, 1.3rem);
    font-weight: 800;
    margin: 0 0 10px 0;
    line-height: 1.3;
    position: relative;
    z-index: 1;
  }

  .bubble-value {
    font-size: clamp(1.4rem, 2vw, 1.7rem);
    font-weight: 800;
    margin: 0;
    position: relative;
    z-index: 1;
  }

  .indicator-bubble.activos {
    background: linear-gradient(135deg, #a31629 0%, #c4213b 50%, #7d1826 100%);
  }

  .indicator-bubble.pasivos {
    background: linear-gradient(135deg, #5c5c5c 0%, #3f3f3f 100%);
  }

  .indicator-bubble.patrimonio {
    background: linear-gradient(135deg, #f8d958 0%, #f0b12b 50%, #e8941f 100%);
    color: #3a2a0f;
  }

  .indicator-badges {
    margin-top: clamp(28px, 4vw, 36px);
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
    z-index: 1;
    position: relative;
  }

  .indicator-badge {
    background: #7d1826;
    color: #fff;
    padding: 14px 20px;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    box-shadow: 0 16px 36px rgba(125, 24, 38, 0.3);
  }

  .badge-label {
    font-size: 0.95rem;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .badge-value {
    font-size: 1.4rem;
    font-weight: 800;
  }

  @media (max-width: 768px) {
    .indicators-section {
      border-radius: 16px;
    }

    .indicator-bubble {
      --size: clamp(190px, 60vw, 230px);
    }

    .indicator-badge {
      width: 100%;
      justify-content: center;
    }
  }
</style>
